<p><%= link_to portfolio_item.title, portfol_show_path(portfolio_item) %></p>
<p><%= portfolio_item.subtitle %></p>
<p><%= portfolio_item.body %></p>
<p><%= image_tag portfolio_item.thumb_image unless portfolio_item.thumb_image.nil? %></p>
<p><%= link_to "Edit", edit_portfol_path(portfolio_item) if logged_in?(:site_admin) %></p>
<p><%= link_to "Delete", portfol_path(portfolio_item), method: :delete, data: { confirm: 'Are you sure?' } if logged_in?(:site_admin) %></p>