<h1>Portfolio Items</h1>
<%= link_to "Create New", new_portfol_url %>

<% @portfolio_items.each do |portfolio_item| %>
<p><%= portfolio_item.title %></p>
<p><%= portfolio_item.subtitle %></p>
<p><%= portfolio_item.body %></p>
<p><%= image_tag portfolio_item.thumb_image unless portfolio_item.thumb_image.nil? %></p>
<p><%= link_to "Edit", edit_portfol_path(portfolio_item.id) %></p>
<p><%= link_to "Show", portfol_path(portfolio_item.id) %></p>
<p><%= link_to "Delete", portfol_path(portfolio_item), method: :delete, data: { confirm: 'Are you sure?' } %></p>
<% end %>