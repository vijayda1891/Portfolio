<div class="comment-card">
	<div class="card">
		<div class="card-block">
			<div class="row">
				<div class="col-md-1">
					<%= gravatar_helper comment.user %>
				</div>
				<div class="col-md-11">
					<div>
					<%= comment.content %>
					</div>
					<div class="com_attr">
						Commented posted by <span class="comment_name"><%= comment.user.first_name %></span> <%= distance_of_time_in_words(comment.created_at, Time.now) %> Ago
					</div>
				</div>
			</div>
		</div>
	</div>
</div>